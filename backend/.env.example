# Application Configuration
DEBUG=false
APP_NAME=IDP Platform

# Database Configuration
# For PostgreSQL (Production)
DATABASE_URL=postgresql://idp:CHANGE_THIS_PASSWORD@localhost:5432/idp_db
# For SQLite (Development only)
# DATABASE_URL=sqlite:///./idp.db

# Authentication & Security
# Generate with: openssl rand -hex 32
JWT_SECRET_KEY=CHANGE_THIS_TO_A_RANDOM_SECRET_KEY_USE_OPENSSL_RAND_HEX_32
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# GitHub Configuration
# Create a Personal Access Token at: https://github.com/settings/tokens
# Required scopes: repo, write:packages
GITHUB_TOKEN=ghp_YOUR_GITHUB_TOKEN_HERE
GITHUB_ORG=your-github-org-or-username

# ArgoCD Configuration
ARGOCD_URL=http://localhost:8080
ARGOCD_USERNAME=admin
# Get password with: kubectl -n argocd get secret argocd-initial-admin-secret -o jsonpath="{.data.password}" | base64 -d
ARGOCD_PASSWORD=YOUR_ARGOCD_PASSWORD_HERE
ARGOCD_NAMESPACE=argocd
ARGOCD_VERIFY_SSL=true  # Set to false for self-signed certs in development

# Kubernetes Configuration
KUBE_CONTEXT=kind-idp-cluster
KUBE_NAMESPACE=default

# Container Registry
CONTAINER_REGISTRY=ghcr.io

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Template Configuration
TEMPLATES_DIR=app/templates
TEMP_DIR=/tmp/idp-projects
